<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
      android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfileActivity">
    <android.support.v7.widget.Toolbar
            android:id="@+id/header"

            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#79BAEC"
            app:title="Profile"
            app:titleTextColor="#ffffff"

            android:theme="@style/Theme.AppCompat" />
    <RelativeLayout
            android:layout_below="@+id/header"
            android:layout_width="match_parent" android:layout_height="match_parent">
<ImageView android:layout_width="80dp" android:layout_height="80dp"

           android:id="@+id/image"
           android:layout_marginTop="10dp"
android:background="@mipmap/profile"
           android:layout_centerHorizontal="true"/>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
android:text="Ali Ahmad"
          android:id="@+id/name"
          android:layout_centerHorizontal="true"
          android:textColor="#000000"
          android:layout_marginTop="5dp"
android:layout_below="@+id/image"/>
        <RelativeLayout
                android:layout_marginTop="25dp"
                android:id="@+id/design"
              android:layout_marginLeft="30dp"
                android:layout_below="@+id/name"
                android:layout_width="wrap_content" android:layout_height="wrap_content">

            <ImageView
                    android:background="@mipmap/designation"
                    android:layout_width="20dp"

                       android:layout_height="20dp"
android:layout_below="@+id/image"
                    android:id="@+id/x"

            />

<TextView android:layout_width="wrap_content"
          android:text="Namssssssse"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@+id/x"
          android:id="@+id/designation"
          android:textColor="#000000"
          android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_marginTop="15dp"
                android:id="@+id/phone"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/design"
                android:layout_width="wrap_content" android:layout_height="wrap_content">

            <ImageView
                    android:background="@mipmap/phone"
                    android:layout_width="20dp"

                    android:layout_height="20dp"
                    android:layout_below="@+id/image"
                    android:id="@+id/x"

            />

            <TextView android:layout_width="wrap_content"
                      android:text="Namssssssse"
                      android:layout_marginLeft="10dp"
                      android:layout_toRightOf="@+id/x"
                      android:id="@+id/phonetext"
                      android:textColor="#000000"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_marginTop="15dp"
                android:id="@+id/password"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/phone"
                android:layout_width="wrap_content" android:layout_height="wrap_content">

            <ImageView
                    android:background="@mipmap/password"
                    android:layout_width="20dp"

                    android:layout_height="20dp"
                    android:layout_below="@+id/image"
                    android:id="@+id/x"

            />

            <TextView android:layout_width="wrap_content"
                      android:text="Namssssssse"
                      android:layout_marginLeft="10dp"
                      android:layout_toRightOf="@+id/x"
                      android:id="@+id/passwordtext"
                      android:textColor="#000000"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_marginTop="15dp"
                android:id="@+id/date"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/password"
                android:layout_width="wrap_content" android:layout_height="wrap_content">

            <ImageView
                    android:background="@mipmap/date"
                    android:layout_width="20dp"

                    android:layout_height="20dp"
                    android:layout_below="@+id/image"
                    android:id="@+id/x"

            />

            <TextView android:layout_width="wrap_content"
                      android:text="Namssssssse"
                      android:layout_marginLeft="10dp"
                      android:layout_toRightOf="@+id/x"
                      android:id="@+id/datetext"
                      android:textColor="#000000"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>